@{
    ViewBag.Title = "Community Management - Update";
    Layout = "~/Views/Shared/_BackAdmin.cshtml";
}
<div class="container-fluid">
    <div class="row cm-fix-height">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Edit Cell Information</h3>
                    <form action="/Admin/UpdateRoom" method="post" onsubmit="return checkForm()">
                        <table class="table table-bordered" style="margin-top:10px;">
                            <tr>
                                <th>Name</th>
                                <td>
                                    <input type="hidden" name="id" value="@Model.id">
                                    <input type="text" name="name" value="@Model.name" class="form-control" placeholder="Community Name" />
                                </td>
                                <th>Phone</th>
                                <td>
                                    <input type="text" name="phone" value="@Model.phone" class="form-control" placeholder="Phone Number" />
                                </td>
                            </tr>
                            <tr>
                                <th>Directors</th>
                                <td>
                                    <input type="text" name="link_name" required value="@Model.link_name" class="form-control" placeholder="Director Name" />
                                </td>
                                <th>Parking Area</th>
                                <td>
                                    <input type="text" name="stop_car_area" required value="@Model.stop_car_area" class="form-control" placeholder="Parking Area" />
                                </td>
                            </tr>
                            <tr>
                                <th>Construct Date</th>
                                <td>
                                    <input type="text" name="construct_date" required value="@Model.construct_date" class="form-control" placeholder="Construct Date" />
                                </td>
                                <th>Road Area</th>
                                <td>
                                    <input type="text" name="road_area" required value="@Model.road_area" class="form-control" placeholder="Road Area" />
                                </td>
                            </tr>
                            <tr>
                                <th>Building Area</th>
                                <td>
                                    <input type="text" name="room_area" required value="@Model.room_area" class="form-control" placeholder="Building Area" />
                                </td>
                                <th>Green Area</th>
                                <td>
                                    <input type="text" name="lh_area" required value="@Model.lh_area" class="form-control" placeholder="Green Area" />
                                </td>
                            </tr>
                            <tr>
                                <th>Number of Buildings</th>
                                <td>
                                    <input type="text" name="room_number" required value="@Model.room_number" class="form-control" placeholder="Amount of Buildings" />
                                </td>
                                <th>Address</th>                            
                                <td>
                                    <input type="text" name="address" value="@Model.address" class="form-control" placeholder="Address" />
                                </td>
                            </tr>
                            <tr>
                                <th>Discription</th>
                                <td colspan="3">
                                    <input type="text" name="remark" required value="@Model.remark" class="form-control" placeholder="Discription" />
                                </td>
                            </tr>
                            <tr>
                                <th colspan="4" style="text-align:center;">
                                    <input type="submit" class="btn btn-default" value="Modifier" />
                                    <input type="button" class="btn btn-default" onclick="javascript: window.history.back();" value="back" />
                                    <h3 style="color:red;">@ViewBag.notice</h3>
                                </th>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function checkForm()
    {
        if ($('[name="name"]').val().length < 1)
        {
            alert("请输入小区名称");
            $('[name="name"]').focus();
            return false;
        }
        if ($('[name="phone"]').val().length < 1) {
            alert("请输入联系电话");
            $('[name="name"]').focus();
            return false;
        }
        if ($('[name="address"]').val().length < 1) {
            alert("请输入地址");
            $('[name="name"]').focus();
            return false;
        }
    }
</script>