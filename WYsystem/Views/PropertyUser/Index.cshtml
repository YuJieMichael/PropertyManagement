@model IEnumerable<WYsystem.Models.w_property_user>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BackAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row cm-fix-height">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h2>Property Administrator Management</h2></div>
                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <th>
                                Property Number
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Gender
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                Id
                            </th>
                            <th>
                                Adress
                            </th>
                            <th>
                                Phone
                            </th>
                            <th>
                                Photo
                            </th>
                            <th>
                                Job
                            </th>
                            <th>Search</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.wy_number)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @if (item.sex == 1)
                                    {
                                        <span>male</span>
                                    }
                                    else
                                    {
                                        <span>female</span>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.work_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.id_number)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.phone)
                                </td>
                                <td>
                                    <img src="@Html.DisplayFor(modelItem => item.pic)" width="30" height="30"  />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.work_info)
                                </td>
                                <td>
                                    <a href="/PropertyUser/Edit?id=@item.id" class="btn btn-success">Edit</a>
                                    |
                                    <a href="/PropertyUser/Delete?id=@item.id" class="btn btn-warning" onclick="return confirm('delete this property manager？')">Delete</a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
