<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>User Information</title>
    <link rel="stylesheet" type="text/css" href="/Content/Owner/UserBack/Css/identify.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Owner/UserBack/Css/layout.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Owner/UserBack/Css/style.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Owner/UserBack/Css/control_index.css" />
    <script type="text/javascript" src="/Content/Owner/UserBack/Js/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="/Content/Owner/UserBack/Js/haidao.offcial.general.js"></script>
    <script type="text/javascript" src="/Content/Owner/UserBack/Js/select.js"></script>
    <script type="text/javascript" src="/Content/Owner/UserBack/Js/haidao.validate.js"></script>
    <style>
        .tobar_title {
            text-align: center;
        }

        .sidebar-icon {
            padding-left: 10PX;
        }

        .img_Icon {
            width: 16px;
            height: 16px;
            vertical-align: middle;
        }

        .img_nav {
            width: 15px;
            height: 15px;
            vertical-align: middle;
        }
    </style>
</head>

<body>
    <div class="view-topbar">
        <div class="topbar-console">
            <div class="tobar-head fl">
                <a href="/Home/Index" class="topbar-home-link topbar-btn text-center fl" title="Back"><span>Home</span></a>
            </div>
        </div>
        <div class="topbar-info">
            <ul style="float: right;">
                <li class="fl topbar-info-item">
                    <div class="dropdown">
                        <a href="#" class="topbar-btn" title="Logout">
                            <span class="fl text-normal"><img src="~/Content/img/head.jpg" alt="" style="width: 40px;height: 40px;border-radius: 5px;vertical-align: middle;">&nbsp;&nbsp;@((Session["User"] as WYsystem.Models.w_user ).user_name)</span>
                            <span class="icon-arrow-down"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/Home/logout" style="text-align: center;">
                                    <h5>Exit<img src="/Content/Owner/UserBack/Images/Icon/close.png" alt="" class="img_Icon"></h5>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="view-body">
        <div class="view-sidebar">
            <div class="sidebar-content">
                <div class="sidebar-nav">
                    <div class="sidebar-title">
                        <a href="/BackUser/Index" style="text-align:center">                    
                            <span class="text-normal">Home Page</span>
                        </a>
                    </div>
                    <div class="sidebar-title">
                        <a href="#">
                            <span class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/boult-x.png" class="img_nav" /></span>
                            <span class="text-normal">Basic Information</span>
                        </a>
                    </div>
                    <ul class="sidebar-trans">
                        <li>
                            <a href="/BackUser/MyCenter">
                                <span class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/user1.png" class="img_Icon" /></span>
                                <span class="text-normal">Personal Information</span>
                            </a>
                        </li>
                        <li>
                            <a href="/BackUser/EditMyForm">
                                <b class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/icon/edit.png" class="img_Icon" /></b>
                                <span class="text-normal">Login Information</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="sidebar-nav">
                    <div class="sidebar-title">
                        <a href="#">
                            <span class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/boult-x.png" class="img_nav" /></span>
                            <span class="text-normal">Property Charges</span>
                        </a>
                    </div>
                    <ul class="sidebar-trans">
                        <li>
                            <a href="/BackUser/MyCharge">
                                <b class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/plan.png" class="img_Icon" /></b>
                                <span class="text-normal">My Property Charges</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="sidebar-nav">
                    <div class="sidebar-title">
                        <a href="#">
                            <span class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/boult-x.png" class="img_nav" /></span>
                            <span class="text-normal">Repair Service</span>
                        </a>
                    </div>
                    <ul class="sidebar-trans">
                        <li>
                            <a href="/BackUser/AddRepair">
                                <b class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/upload.png" class="img_Icon" /></b>
                                <span class="text-normal">Initiate Repairs</span>
                            </a>
                        </li>
                        <li>
                            <a href="/BackUser/MyRepairRecord">
                                <b class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/plan3.png" class="img_Icon" /></b>
                                <span class="text-normal">Repair Record</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="sidebar-nav">
                    <div class="sidebar-title">
                        <a href="#">
                            <span class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/boult-x.png" class="img_nav" /></span>
                            <span class="text-normal">Complaint Service</span>
                        </a>
                    </div>
                    <ul class="sidebar-trans">
                        <li>
                            <a href="/BackUser/AddComplaint">
                                <b class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/kefu.png" class="img_Icon" /></b>
                                <span class="text-normal">Initiate Complaints</span>
                            </a>
                        </li>
                        <li>
                            <a href="/BackUser/MyComplaintRecord">
                                <b class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/plan2.png" class="img_Icon" /></b>
                                <span class="text-normal">Complaint Record</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="view-product background-color">
            <div class="padding-big background-color">
                <div class="account-info clearfix">
                    <div class="text-box-main min-width-300 fl">
                        <dl>
                            <dt class="padding-big-left lists-border-list clearfix">
                                <div class="title fl padding-big-top padding-big-bottom">
                                    <p><h1>Hi,@((Session["User"] as WYsystem.Models.w_user ).user_name)</h1></p>
                                    <p class="margin-small-top clearfix">
                                        <!--<span class="fl">safty level：<em class="text-blue-deep">high</em></span>-->
                                        <!--Not Verified-->
                                        <!--<a class="button bg-blue-deep icon icon-button-blue fl margin-left" href="#">Go Verified</a>-->
                                        <!--Verified Successed-->
                                        <!-- <a class="button bg-green-deep icon icon-button-green fl margin-left" href="#">Already Verified</a> -->
                                    </p>
                                </div>
                                <span class="fr icon-head">
                                    <img src="~/Content/img/head.jpg" alt="profile image">
                                </span>
                            </dt>
                            <dd class="padding-big clearfix">
                                @foreach (var item in ViewBag.UserInfo)
                                {
                    <p class="w50 fl">
                        <i class="fl icon icon-mobile"></i>
                        @if (item.phone != null || item.phone != "")
                        {


        <span class="fl margin-left">phone:binding</span> }
                        else
                        {
                    <span class="fl margin-left">phone：not binding</span>}
                    </p>
                                    <p class="w50 fl">
                                        <i class="fl icon icon-email"></i>
                                        @if (item.email != null || item.email != "")
                                        {


                        <span class="fl margin-left">email：binding</span> }
                                        else
                                        {
                                    <span class="fl margin-left">email：not binding</span>}
                                    </p>}
                            </dd>
                        </dl>
                    </div>
                    <div class="text-box-main min-width-360 fl">
                        <dl>
                            <dt class="padding-big lists-border-list clearfix">
                                <div class="fl w50 title">
                                    <p>Balance</p>
                                    <p class="margin-small-top clearfix">
                                        <span class="fl"><em class="h3 text-blue-deep">0.00 </em>$</span>
                                        @*<a class="fl margin-left button btn-red text-white" href="#">recharge</a>*@
                                    </p>
                                </div>
                                <div class="fl w50 padding-left title">
                                    <p>Amount of fees not paid</p>
                                    <p class="margin-small-top clearfix">
                                        <span class="fl"><em class="h3 text-red-deep">0 </em>$</span>
                                        @*<a class="fl margin-left button btn-red text-white" target="view_window" href="#">recharge</a>*@
                                    </p>
                                </div>
                            </dt>
                            <dd class="padding-big">
                                <div class="account-class text-hidden">

                                </div>
                            </dd>
                        </dl>
                    </div>
                    <div class="text-box-main min-width-300 fl margin-right-none">
                        <dl>
                            <dt class="padding-big lists-border-list clearfix">
                                <div class="fl title">
                                    <p>Property Management</p>
                                    <p class="text-sliver text-default margin-small-top">
                                        <em class="h3 text-golden margin-big-right"></em>Welcome to Property Management
                                    </p>
                                </div>
                                <div class="fr">
                                    <a class="button btn-orange text-white" href="/" target="_blank">Home page</a>
                                </div>
                            </dt>
                            <dd class="padding-big">
                                <div class="account-class text-hidden">
                                    <p>Greeting!dm me if you have any question!</p>
                                </div>
                            </dd>
                        </dl>
                    </div>
                </div>

                <!--Product-->
                <div class="account-product margin-big-top clearfix">
                    <div class="text-box-main padding-big fl mine-product">
                        <div class="w50 fl">
                            <h2 class="h6 margin-big-bottom">Repair Record</h2>
                        </div>
                        <div class="w50 fl">
                            <h2 class="h6 margin-big-bottom" style="float: right;" />
                            <a class="text-main fr" href="/BackUser/MyRepairRecord">Learn More</a>
                        </div>
                        <div class="mine-product-content clearfix">
                            <ul class="fl lists" style="width: 100%;">
                                @foreach (var item in ViewBag.RepairRecord)
                                {
                    <li class="lists-border-list">
                        <p class="border-list-text">
                            @item.title：<em class="orange">
                                @if (item.state == 2)
                                {
                <span style="color:red">Done</span> }
                                else if (item.state == 3)
                                {
                                        <span style="color:blue">Unprocessed</span> }
                                else if (item.state == 1)
                                {
                                        <span style="color:green">Reviewed</span> }
                                else
                                {
                                        <span style="color:yellow">Not Reviewed</span>}
                            </em>
                            <a class="text-main fr" href="/BackUser/MyRepairRecord">Check</a>
                        </p>
                    </li>}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        //left menu
        $(".sidebar-title").live('click', function () {
            if ($(this).parent(".sidebar-nav").hasClass("sidebar-nav-fold")) {
                $(this).next().slideDown(200);
                $(this).parent(".sidebar-nav").removeClass("sidebar-nav-fold");
            } else {
                $(this).next().slideUp(200);
                $(this).parent(".sidebar-nav").addClass("sidebar-nav-fold");
            }
        });</script>
</body>

</html>
