
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Proprietor Center</title>
    <link rel="stylesheet" type="text/css" href="/Content/Owner/UserBack/Css/identify.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Owner/UserBack/Css/layout.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Owner/UserBack/Css/account.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Owner/UserBack/Css/style.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Owner/UserBack/Css/control_index.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="/Content/Owner/UserBack/Js/layer/layer.js"></script>
    <script type="text/javascript" src="/Content/Owner/UserBack/Js/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="/Content/Owner/UserBack/Js/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="/Content/Owner/UserBack/Js/haidao.offcial.general.js"></script>
    <script type="text/javascript" src="/Content/Owner/UserBack/Js/select.js"></script>
    <script type="text/javascript" src="/Content/Owner/UserBack/Js/haidao.validate.js"></script>
    <style>
        .tobar_title {
            text-align: center;
        }

        .img_Icon {
            width: 16px;
            height: 16px;
            vertical-align: middle;
        }

        .img_nav {
            width: 25px;
            height: 20px;
            vertical-align: middle;
        }

        .nav li {
            float: left;
            font-size: 16px;
            font-weight: bolder;
            cursor: pointer;
        }

        .nav_active {
            color: #00A2FF;
            font-weight: bolder;
        }

        .nav li:nth-child(2) {
            margin-left: 20px;
        }

        .contentBox div {
            display: none;
        }

        .show {
            display: block !important;
        }

        .reloadBox {
            display: block;
        }
    </style>
</head>

<body>
    <div class="view-topbar">
        <div class="topbar-console">
            <div class="tobar-head fl">
                <a href="/Home/Index" class="topbar-home-link topbar-btn text-center fl" title="Back"><span>Home</span></a>
            </div>
        </div>
        <div class="topbar-info">
            <ul style="float: right;">
                <li class="fl topbar-info-item">
                    <div class="dropdown">
                        <a href="#" class="topbar-btn" title="Logout">
                            <span class="fl text-normal"><img src="~/Content/img/head.jpg" alt="" style="width: 40px;height: 40px;border-radius: 5px;vertical-align: middle;">&nbsp;&nbsp;@((Session["User"] as WYsystem.Models.w_user ).user_name)</span>
                            <span class="icon-arrow-down"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/Home/logout" style="text-align: center;">
                                    <h5>Logout<img src="/Content/Owner/UserBack/Images/Icon/close.png" alt="" class="img_Icon"></h5>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="view-body">
        <div class="view-sidebar">
            <div class="sidebar-content">
                <div class="sidebar-nav">
                    <div class="sidebar-title">
                        <a href="/BackUser/Index" style="text-align:center">
                            <span class="text-normal">My Profile</span>
                        </a>
                    </div>
                    <div class="sidebar-title">
                        <a href="#">
                            <span class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/boult-x.png" class="img_nav" /></span>
                            <span class="text-normal">Basic Information</span>
                        </a>
                    </div>
                    <ul class="sidebar-trans">
                        <li>
                            <a href="/BackUser/MyCenter">
                                <span class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/user1.png" class="img_Icon" /></span>
                                <span class="text-normal">Personal Information</span>
                            </a>
                        </li>
                        <li>
                            <a href="/BackUser/EditMyForm">
                                <b class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/icon/edit.png" class="img_Icon" /></b>
                                <span class="text-normal">Login Information</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="sidebar-nav">
                    <div class="sidebar-title">
                        <a href="#">
                            <span class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/boult-x.png" class="img_nav" /></span>
                            <span class="text-normal">Property Charges</span>
                        </a>
                    </div>
                    <ul class="sidebar-trans">
                        <li>
                            <a href="/BackUser/MyCharge">
                                <b class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/plan.png" class="img_Icon" /></b>
                                <span class="text-normal">My Property Charges</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="sidebar-nav">
                    <div class="sidebar-title">
                        <a href="#">
                            <span class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/boult-x.png" class="img_nav" /></span>
                            <span class="text-normal">Repair Service</span>
                        </a>
                    </div>
                    <ul class="sidebar-trans">
                        <li>
                            <a href="/BackUser/AddRepair">
                                <b class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/upload.png" class="img_Icon" /></b>
                                <span class="text-normal">Initiate Repairs</span>
                            </a>
                        </li>
                        <li>
                            <a href="/BackUser/MyRepairRecord">
                                <b class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/plan3.png" class="img_Icon" /></b>
                                <span class="text-normal">Repair Record</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="sidebar-nav">
                    <div class="sidebar-title">
                        <a href="#">
                            <span class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/boult-x.png" class="img_nav" /></span>
                            <span class="text-normal">Complaint Service</span>
                        </a>
                    </div>
                    <ul class="sidebar-trans">
                        <li>
                            <a href="/BackUser/AddComplaint">
                                <b class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/kefu.png" class="img_Icon" /></b>
                                <span class="text-normal">Initiate Complaints</span>
                            </a>
                        </li>
                        <li>
                            <a href="/BackUser/MyComplaintRecord">
                                <b class="sidebar-icon"><img src="/Content/Owner/UserBack/Images/Icon/plan2.png" class="img_Icon" /></b>
                                <span class="text-normal">Complaint Record</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="view-product">
            <div class="info-center">
                <div class="manage-head">
                    <h6 class=" padding-left manage-head-con ">Complaint Record</h6>
                </div>
                <div class="info-center-con">
                    <div class=" info-center-title h5 margin-big-top clearfix" id="ul_nav">
                        <ul class="nav">
                            <li class="nav_active">
                                Initiate Repairs
                            </li>
                            <li>
                                Repairs Record
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="offcial-table input-table table-margin clearfix">
                    <div class="tr-th clearfix contentBox">
                        <!-- Initiate Repairs -->
                        <div class="show">
                            <table class="table table-hover">
                                <tr>
                                    <td>ID</td>
                                    <td>Repair Number</td>
                                    <td>Building Number</td>
                                    <td>Reporter</td>
                                    <td>Room Number</td>
                                    <td>Report Title</td>
                                    <td>Description</td>
                                    <td>Report Time</td>
                                    <td>Status</td>
                                </tr>
                                @foreach (var item in ViewBag.MyRecord)
                                {
                                    <tr>
                                        <td>@item.id</td>
                                        <td>@item.repair_number</td>
                                        <td>@item.danyuan_id</td>
                                        <td>@item.w_user.user_name</td>
                                        <td>@item.house_id</td>
                                        <td>@item.title</td>
                                        <td>@item.describe</td>
                                        <td>@item.createtime</td>
                                        <td>
                                            @if (item.state == 2)
                                            {
                                                <span style="color:red">Processed</span> }
                                            else if (item.state == 3)
                                            {
                                                <span style="color:blue">Unprocessed</span> }
                                            else if (item.state == 1)
                                            {
                                                <span style="color:green">Audited</span> }
                                            else
                                            {
                                                <span style="color:yellow">Unread</span>}
                                        </td>

                                    </tr>
                                }
                            </table>
                        </div>

                        <!-- Repairs Record -->
                        <div>
                            <table class="table table-hover">
                                <tr>
                                    <td>ID</td>
                                    <td>Repair Number</td>
                                    <td>Building Number</td>
                                    <td>Reporter</td>
                                    <td>Room Number</td>
                                    <td>Report Title</td>
                                    <td>Description</td>
                                    <td>Report Time</td>
                                    <td>Maintenance Unit</td>
                                    <td>Principal</td>
                                    <td>Handler</td>
                                    <td>Review</td>
                                    <td>Status</td>
                                    @*<td>Comments</td>*@
                                </tr>
                                @foreach (var item in ViewBag.RepairRecord)
                                {
                                    <tr>
                                        <td>@item.id</td>
                                        <td>@item.repair_number</td>
                                        <td>@item.unit_name</td>
                                        <td>@item.w_user.user_name</td>
                                        <td>@item.house_id</td>
                                        <td>@item.title</td>
                                        <td>@item.describe</td>
                                        <td>@item.createtime</td>
                                        <td>@item.repair_work_info</td>
                                        <td>@item.main_repair_user</td>
                                        <td>@item.finaly_repair_user</td>
                                        <td>
                                            @if (item.state == 1)
                                            {<span>Processed</span>}
                                        </td>
                                        <td>@item.pass_detail</td>
                                        @*<td><button type="button" class="btn btn-primary btn-xs" id="btnReLoad">Reply</button></td>*@
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                    @if (ViewBag.MyRecordCount == 0 || ViewBag.RepairRecordCount == 0)
                    {
                        <div class="non-info">
                            <span>No Comments</span>
                        </div>}

                </div>
            </div>
            <div class="show-page padding-top-0 layout hidden">
                <ul class="tr-float">
                </ul>
            </div>
        </div>
    </div>



    <script>
        $(".sidebar-title").live('click', function () {
            if ($(this).parent(".sidebar-nav").hasClass("sidebar-nav-fold")) {
                $(this).next().slideDown(200);
                $(this).parent(".sidebar-nav").removeClass("sidebar-nav-fold");
            } else {
                $(this).next().slideUp(200);
                $(this).parent(".sidebar-nav").addClass("sidebar-nav-fold");
            }
        });
        //Switch
        $('#ul_nav li').click(function () {
            $(this).addClass('nav_active').siblings('li').removeClass('nav_active');
            var index = $(this).index();
            $(".contentBox div").eq(index).addClass("show").siblings("div>div").removeClass("show");
        })
    </script>
</body>

</html>
