@model WYsystem.Models.w_announcement

@{
    ViewBag.Title = "Community Information - Create";
    Layout = "~/Views/Shared/_BackAdmin.cshtml";
}


<div class="container-fluid">
    <div class="row cm-fix-height">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading" style="margin-bottom:20px"><h2>Add Announcement</h2></div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.number, "Announcement ID", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="text" name="numbers" disabled class="form-control" value='G @DateTime.Now.ToString("yyyy-MM-dd")10001' />
                                <input type="text" name="number" style="display:none" class="form-control" value='G @DateTime.Now.ToString("yyyy-MM-dd")10001' />
                                @Html.ValidationMessageFor(model => model.number, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.title, "Annoucement Title", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control",@placeholder="title" } })
                                @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.createtime, "Publish date", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.createtime, new { htmlAttributes = new { @class = "form-control",@type="date"} })
                                @Html.ValidationMessageFor(model => model.createtime, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.contents, "Content", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <textarea name="contents" class = "form-control" rows="3" placeholder="announcement information"></textarea>
                                @Html.ValidationMessageFor(model => model.contents, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group" style="display:none">
                            @Html.LabelFor(model => model.uid, "uid", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="hidden" name="name" value='@Session["uid"]' />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.nickname, "Publisher", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="text" name="nicknames" disabled class="form-control" value="@Session["nickname"]" />
                                <input type="text" name="nickname" style="display:none;" class="form-control" value="@Session["nickname"]" />
                                @Html.ValidationMessageFor(model => model.nickname, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Add Announcement" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
        </div>
    </div>
</div>