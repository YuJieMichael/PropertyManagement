@model IEnumerable<WYsystem.Models.w_installation>

@{
    ViewBag.Title = "Surrounding";
    Layout = "~/Views/Shared/_BackAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row cm-fix-height">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h2>Surrounding Management</h2></div>
                <div class="panel-body">
                    <form action="" method="get">
                        <div class="row">
                            <div class="col-md-2" style="line-height:40px;">
                                Search：
                            </div>
                            <div>
                                <div class="col-sm-2">
                                    <input name="keyword" class="form-control" placeholder="key word">
                                </div>
                            </div>
                            <div>
                                <div class="col-sm-1">
                                    <input type="submit" class="btn btn-primary" value="search" />
                                </div>

                            </div>
                        </div>
                    </form>
                    <table class="table">
                        <tr>
                            <th>
                                Title
                            </th>
                            <th>
                                Contactor
                            </th>
                            <th>
                                Phone
                            </th>
                            <th>
                                Principal
                            </th>
                            <th>
                                Type
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.main_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.w_system_params.name)
                        </td>
                        <td>
                            <a href="/Installation/Edit?id=@item.id" class="btn btn-success">Edit</a>  |
                            <a href="/Installation/Delete?id=@item.id" class="btn btn-warning" onclick="return confirm('Do you want to delete？')">Delete</a>
                        </td>
                    </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>