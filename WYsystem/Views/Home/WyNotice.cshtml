    <script src="/Content/Owner/Index/js/jquery.ias.js"></script>
    <script src="/Content/Owner/Index/js/scripts.js"></script>
    <script>
        $('#serach').click(function () {
            $('.searchNav').css('display', 'block');
        });
        //input
        $('#serach').blur(function () {
            $('.searchNav').css('display', 'none');
        });
        //search
        let serach = document.querySelector('#serach');
        let span_data = document.querySelector('.searchContent');
        let data = {};
        Object.defineProperty(data, 'val', {
            get: function () {
                return val;
            },
            set: function (newVal) {
                val = newVal;
                serach.value = val;
                span_data.innerHTML = val;
            }
        })
        function OnInputData() {
            data.val = serach.value;
        }
        //===================
        $('#btnSearch').click(function () {
            $.ajax({
                url: "/Home/WyNotice",
                type: "Get",
                data: {
                    keywords:$('#serach').val()
                },
                success: function (data) {
                    $('#body_content').html(data);
                },
                error: function () {
                    alert('Error！');
                }
            })
        })
    </script>
